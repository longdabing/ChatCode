@import '../../component/listcomp/list-comp.wxss';
/**去除scroll-view滚动条**/
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
.box {
  position: absolute;
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.itemview .nameactive{
  color: #d81e06;
  font-weight: bold;
}
.box .active{
  color: #d81e06;
  font-weight: bold;
  border-left: 4rpx solid #d81e06;
}

.left {
  position: absolute;
  left: 0;
  top: 0;
  height: 100%;
  width: 145rpx;
  /* background:#feeeed; */
  text-align: center;
  font-size: 28rpx;
}

.right {
  margin-left: 145rpx;
  height: 100%;
  overflow: hidden;
  width: auto;
  background: #fff;
}