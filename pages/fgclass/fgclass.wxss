  height: 500rpx;
}

.itemview {
  height: 40rpx;
  width: 140rpx;
  margin-top: 30rpx;
  margin-left: 0rpx;
  /* background-color: #99CC33; */
}
.itemview .leftname{
  display: inline-block;
  font-size: 28rpx;
  color: #646464;
  line-height: 1.2;
  text-align: left;
  pointer-events: none;
}
