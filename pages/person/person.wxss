.imgbox{
  display: flex;
flex-flow: column;
  justify-content: center;
  align-items: center;
  width: 100vw;
  height: 300rpx;
  background-color: #a3cf62;
}
.imgbox image{
  width: 300rpx;
  height: 300rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 50%;
}
.imgbox  .name{
  margin-bottom: 20rpx;
}
.flex-box{
  display: flex;
  flex-flow: column;
}
.flex-box .txt{
  margin-top: 20rpx;
  margin-left: 20rpx;
}

.splitline{
  width: 92%;
  height: 2rpx;
  margin-left: 4%;
  margin-right: 4%;
  background-color: wheat;
}
