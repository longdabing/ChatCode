.container .box{
  display: flex;
  flex-flow: column;
  /* flex-wrap: wrap; */
  justify-content: space-around;
}
.item{
  text-align: center;
  margin-top: 20rpx;
  /* border-bottom: 1rpx solid #d81e06; */
}

.item image{
  float:left;
  width: 140rpx;
  height: 140rpx;
  /* margin-top: 10rpx; */
  border-radius: 6rpx;
  margin-left: 20rpx;
}


.item .icontxt{
  font-size: 28rpx;
  color: #646464;
  line-height: 1.2;
  text-align: left;
  float: left;
}
.item .info{
  display: flex;
  justify-content: space-between;
  margin-top:60rpx;
}
.item .info .price{
  color: red;
}
.item .info .add{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background-color: #426ab3;
  line-height: 50rpx;
  text-align: center;
  margin-right: 50rpx;
  color: white;
}
.splitline{
  width: 92%;
  height: 2rpx;
  margin-left: 4%;
  margin-right: 4%;
  background-color: wheat;
}